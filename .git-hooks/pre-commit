#!/bin/bash
# Pre-commit hook for sysm
# Formats staged Swift files and runs SwiftLint

set -euo pipefail

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo -e "${YELLOW}Running pre-commit checks...${NC}"

# Check if SwiftFormat is installed
if ! command -v swiftformat &> /dev/null; then
    echo -e "${RED}Error: SwiftFormat is not installed${NC}"
    echo "Install with: brew install swiftformat"
    exit 1
fi

# Check if SwiftLint is installed
if ! command -v swiftlint &> /dev/null; then
    echo -e "${RED}Error: SwiftLint is not installed${NC}"
    echo "Install with: brew install swiftlint"
    exit 1
fi

# Get list of staged Swift files
STAGED_SWIFT_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.swift$' || true)

if [ -z "$STAGED_SWIFT_FILES" ]; then
    echo -e "${GREEN}No Swift files staged, skipping checks${NC}"
    exit 0
fi

echo -e "${YELLOW}Formatting staged Swift files...${NC}"

# Format staged files
for FILE in $STAGED_SWIFT_FILES; do
    if [ -f "$FILE" ]; then
        echo "  Formatting $FILE"
        swiftformat "$FILE" --quiet
        git add "$FILE"
    fi
done

echo -e "${GREEN}✓ Formatting complete${NC}"

echo -e "${YELLOW}Running SwiftLint on staged files...${NC}"

# Lint staged files
LINT_FAILED=0
for FILE in $STAGED_SWIFT_FILES; do
    if [ -f "$FILE" ]; then
        if ! swiftlint lint --path "$FILE" --quiet; then
            LINT_FAILED=1
        fi
    fi
done

if [ $LINT_FAILED -eq 1 ]; then
    echo -e "${RED}✗ SwiftLint found issues${NC}"
    echo -e "${YELLOW}Fix the issues above or run: make format lint${NC}"
    exit 1
fi

echo -e "${GREEN}✓ SwiftLint passed${NC}"
echo -e "${GREEN}✓ Pre-commit checks complete${NC}"

exit 0
